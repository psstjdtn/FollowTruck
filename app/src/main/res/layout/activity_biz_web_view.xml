<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="80"
    tools:context="com.shinhan.sspark.followtruck.BizWebViewActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"></WebView>

    <!-- 버튼이벤트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="10">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="위치보기"
            android:clickable="true"
            android:background="@color/biz_btn_bg"
            android:textColor="@color/biz_btn_text"
            android:onClick="locateManage"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="메뉴등록"
            android:clickable="true"
            android:background="@color/biz_btn_bg"
            android:textColor="@color/biz_btn_text"
            android:onClick="menuinsert"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="메뉴보기"
            android:clickable="true"
            android:background="@color/biz_btn_bg"
            android:textColor="@color/biz_btn_text"
            android:onClick="menulist"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주문내역"
            android:clickable="true"
            android:background="@color/biz_btn_bg"
            android:textColor="@color/biz_btn_text"
            android:onClick="orderHistory"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내정보"
            android:clickable="true"
            android:background="@color/biz_btn_bg"
            android:textColor="@color/biz_btn_text"
            android:onClick="myInfo"/>
    </LinearLayout>

</LinearLayout>


